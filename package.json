{
  "name": "@taleef/llm-prompt-kit",
  "version": "0.1.0",
  "description": "A toolkit for building, managing, and formatting prompts for Large Language Models.",
  "keywords": [
    "llm",
    "prompt",
    "prompt",
    "engineering",
    "ollama",
    "api",
    "nlp",
    "typescript",
    "toolkit",
    "ai"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "author": "Taleef Tamsal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Taleef7/llm-prompt-kit.git"
  },
  "bugs": {
    "url": "https://github.com/Taleef7/llm-prompt-kit/issues"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/Taleef7/llm-prompt-kit#readme",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsc",
    "lint": "eslint \"src/**/*.ts\" --quiet --max-warnings 0",
